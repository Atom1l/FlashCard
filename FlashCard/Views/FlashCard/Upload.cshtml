@{
    ViewData["Title"] = "FlashCard";
}

<div class="container home-bg d-flex flex-column justify-content-center align-items-center">
    <img src="/pic/BG/Home.png" class="background" />
    

    <form method="post" enctype="multipart/form-data" class="d-flex flex-column justify-content-center align-items-center bg-info p-5 shadow">
        <h2 class="noto-bold mb-3">Upload Image</h2>
        <div class="w-100 mb-3">
            <label class="form-label">Image Name</label>
            <input type="text" name="name" class="form-control" required placeholder="Enter image name" />
        </div>

        <div class="w-100 mb-5">
            <label class="form-label">Select Image</label>
            <input type="file" name="file" class="form-control" required />
        </div>

        <button type="submit" class="w-75 btn btn-light text-black noto-bold">Upload</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <p class="mt-3 text-success">@ViewBag.Message</p>
    }
</div>
