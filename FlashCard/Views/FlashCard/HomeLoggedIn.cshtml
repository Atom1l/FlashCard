@{
    ViewData["Title"] = "Flash Card";
}

<div class="container home-bg">
    <img src="/pic/BG/Home.png" class="background" />

    <div class="streak">
        <i class="fa-solid fa-fire"></i>
        <div class="noto-bold">@ViewBag.Streak</div>
    </div>

    <!-- ตัวละครที่เพิ่มเข้ามา -->
    <img id="nong-purple" src="/pic/BG/Nong Purple .PNG" style="position: absolute; top: 1%; left: 5%; width: 200px; transform: rotate(-10deg);" />
    <img src="/pic/BG/Nong Yellow .PNG" style="position: absolute; top: 60%; left: 5%; width: 280px; transform: rotate(20deg);" />
    <img src="/pic/BG/NongBlue.PNG" style="position: absolute; top: 20%; left: 87%; width: 150px; transform: rotate(-5deg);" />
    <img src="/pic/BG/NongRed.PNG" style="position: absolute; top: 60%; left: 80%; width: 200px; transform: rotate(-10deg);" />

    <div class="row d-flex flex-column justify-content-center align-items-center">
        <div class="game-text noto-bold fs-1">เกมพลเมืองดี 4.0</div>
        <div class="noto-medium text-center fs-1">
            @if (User.Identity.IsAuthenticated)
            {
                <p>ยินดีต้อนรับ <span class="noto-bold">@User.Identity.Name !</span></p>
            }
            else
            {
                <script type="text/javascript">
                    window.location.href = '@Url.Action("Home", "FlashCard")';
                </script>
            }
        </div>
        <a asp-action="Mainmenu" class="w-50 start-btn noto-bold text-white">เริ่มเกม</a>
        <a asp-action="Logout" class="logout-text noto-regular text-danger text-center text-decoration-underline mt-3">ออกจากระบบ</a>
    </div>

</div>
